<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueSoft"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Hi TRONers!!"
        android:fontFamily="@font/mmedium"
        android:textColor="@color/blueSecond"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mlight"
        android:lineSpacingExtra="4dp"
        android:text="Its will help you study harder every day you like do"
        android:textAlignment="center"
        android:textColor="@color/silver"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/headerTitle" />

    <ImageView
        android:id="@+id/ic_cards"
        android:layout_width="158dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_cards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle" />

    <LinearLayout
        android:id="@+id/lienar_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/ic_cards">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/resultOne"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_item_result"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:textAlignment="center"
                    android:fontFamily="@font/mmedium"
                    android:textColor="@color/blueSecond"
                    android:textSize="24dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mlight"
                    android:lineSpacingExtra="4dp"
                    android:text="Reword"
                    android:textAlignment="center"
                    android:textColor="@color/blueSecond"
                    android:textSize="16dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/resultTwo"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_item_result"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textAlignment="center"
                    android:fontFamily="@font/mmedium"
                    android:textColor="@color/blueSecond"
                    android:textSize="24dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mlight"
                    android:lineSpacingExtra="4dp"
                    android:text="Videos"
                    android:textAlignment="center"
                    android:textColor="@color/blueSecond"
                    android:textSize="16dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/resultThree"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_item_result"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textAlignment="center"
                    android:fontFamily="@font/mmedium"
                    android:textColor="@color/blueSecond"
                    android:textSize="24dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mlight"
                    android:lineSpacingExtra="4dp"
                    android:text="MPV"
                    android:textAlignment="center"
                    android:textColor="@color/blueSecond"
                    android:textSize="16dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_next_yours"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/bg_btn_primary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:fontFamily="@font/mmedium"
        android:text="Next Yours"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lienar_result" />

</androidx.constraintlayout.widget.ConstraintLayout>